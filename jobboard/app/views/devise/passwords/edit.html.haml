%h2= t('.change_your_password', :default => 'Change your password')
= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => "form-horizontal" } }) do |f|
  = devise_error_messages!
  = f.hidden_field :reset_password_token
    .form-group
      %label.col-sm-2.control-label{:for => "new_password"} Nouveau mot de passe
      .col-sm-10
        = f.text_field :password, :class => "form-control"
    .form-group
      %label.col-sm-2.control-label{:for => "confirm_new_password"} Confirmation du nouveau mot de passe
      .col-sm-10
        = f.text_field :password_confirmation, :class => "form-control"

  %div= f.submit t('.change_my_password', :default => 'Change my password'), :class => "btn btn-default"
  = render "devise/shared/links"
