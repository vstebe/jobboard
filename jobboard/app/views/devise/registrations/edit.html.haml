%h2= t('.title', :resource => resource_class.model_name.human , :default => "Edit #{resource_name.to_s.humanize}")
= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => "form-horizontal" }) do |f|
  = devise_error_messages!
  .panel.login-panel
    .panel-body
      .form-group
        %label.col-sm-2.control-label{:for => "surname"} Nom
        .col-sm-10
          = f.text_field :surname, :class => "form-control"
      .form-group
        %label.col-sm-2.control-label{:for => "firs_name"} PrÃ©nom
        .col-sm-10
          = f.text_field :first_name, :class => "form-control"
      .form-group
        %label.col-sm-2.control-label{:for => "email"} Email
        .col-sm-10
          = f.text_field :email, :class => "form-control"
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %p
          = t('.currently_waiting_confirmation_for_email', :email => resource.unconfirmed_email, :default => "Currently waiting confirmation for: %{email}")

      .form-group
        %label.col-sm-2.control-label{:for => "password"} Mot de passe
        .col-sm-10
          = f.password_field :password, :class => "form-control", :autocomplete => "off"
          %i
            (#{t('.leave_blank_if_you_don_t_want_to_change_it', :default => "leave blank if you don't want to change it")})

      .form-group
        %label.col-sm-2.control-label{:for => "password_confirmation"} Confirmation du mot de passe
        .col-sm-10
          = f.password_field :password_confirmation, :class => "form-control"
      .form-group
        %label.col-sm-2.control-label{:for => "current_password"} Mot de passe actuel
        .col-sm-10
          = f.password_field :current_password, :class => "form-control"
          %i
            (#{t('.we_need_your_current_password_to_confirm_your_changes', :default => 'we need your current password to confirm your changes')})

      .form-group.lastBox
        .col-sm-2
        .col-sm-10
          = f.submit t('.update', :default => "Update"), :class => "btn btn-default"
